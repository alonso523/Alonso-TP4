<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> El cliente no se ha registrado:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %> 

  <div class="field">
    <%f.label :id%>
    <% @user.id %>
  </div>
  <div class="field">
    <%f.label :provider %>
    <% @user.provider %>
  </div>
  <div class="field">
    <%f.label :uid %>
    <% @user.uid %>
  </div>
 <div class="field">
    <%= f.label :cedula, 'Cedula' %><br />
    <%= f.number_field :cedula %>
  </div>
  <div class="field">
    <%= f.label :nombre, 'Nombre' %><br />
    <%= f.text_field :nombre%>
  </div>
  <div class="field">
    <%= f.label :apellido, 'Apellido' %><br />
    <%= f.text_field :apellido%>
  </div>
  <div class="field">
    <%= f.label :correo, 'Email' %><br />
    <%= f.text_field :correo%>
  </div>
  <div class="field">
    <%= f.label :direccion, 'DirecciÃ³n' %><br />
    <%= f.text_field :direccion%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
