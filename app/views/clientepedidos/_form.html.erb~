<%= form_for(@clientepedido) do |f| %>
  <% if @clientepedido.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@clientepedido.errors.count, "error") %> prohibited this clientepedido from being saved:</h2>

      <ul>
      <% @clientepedido.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= select :cliente, :cliente_id, Cliente.find(:all).collect {|c| [c.nombre]}, {:include_blank => false} %><br />
  </div>
    <div class="field">
    <%= select :producto, :producto_id, Producto.find(:all).collect {|c| [c.nombre]}, {:include_blank => false} %><br />
  </div>
  <div class="field">
    <%= f.label :cantidad %><br />
    <%= f.number_field :cantidad %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
