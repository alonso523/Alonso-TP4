<%= form_for @producto, :html => {:multipart => true} do |f| %>
  <% if @producto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@producto.errors.count, "error") %> prohibited this producto from being saved:</h2>

      <ul>
      <% @producto.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :tipoProducto_id, 'Tipo de producto' %><br />
    <%= f.number_field :tipoProducto_id %>
  </div>
  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :marca %><br />
    <%= f.text_field :marca %>
  </div>
  <div class="field">
    <%= f.label :precio %><br />
    <%= f.text_field :precio %>
  <div class="field">
    <%= f.label :descripcion %><br />
    <%= f.text_field :descripcion %>
  </div>
  <div class="field">
    <%= f.label :cantidad %><br />
    <%= f.number_field :cantidad %>
  </div>
  </div>
    <%= f.label :image, 'Imagen' %><br />
    <%= f.file_field :image %><br />
  </div>
    <%= f.label :remote_image_url, 'Imagen desde url' %><br />
    <%= f.text_field :remote_image_url %><br />
  </div> 
 </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
